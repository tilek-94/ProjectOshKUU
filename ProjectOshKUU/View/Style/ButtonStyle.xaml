    <Style x:Key="ButtonFloor1" TargetType="Button">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border BorderThickness="5,0,5,5" Background="White" BorderBrush="#707070">
                    <StackPanel   >
                        <TextBlock FontSize="50" HorizontalAlignment="Center"  Foreground="#4B86FA" FontWeight="Bold" Text="{TemplateBinding Uid}"/>
                        <TextBlock FontSize="20" HorizontalAlignment="Center" Text="Этаж"/>
                    </StackPanel>
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
