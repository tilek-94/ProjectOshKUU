    <Style x:Key="ButtonKG" TargetType="Button">
        <Setter Property="Height" Value="100"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" CornerRadius="50">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="0"  RenderingBias="Quality"/>
                        </Border.Effect>
                        <Border.Background>
                            <ImageBrush ImageSource="/Image/Flag/KGZ1.png" Stretch="UniformToFill">
                            </ImageBrush>
                        </Border.Background>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Content="{TemplateBinding Content}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Height" Value="110"/>
                            <Setter Property="Width" Value="110"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

