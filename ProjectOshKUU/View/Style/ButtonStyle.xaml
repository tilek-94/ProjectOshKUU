    <Style x:Key="ButtonBuilding" TargetType="Button">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="#4B86FA" CornerRadius="2">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Image/Building/bank.png" Margin="10"/>
                            <StackPanel VerticalAlignment="Center" Margin="10" >
                            <TextBlock VerticalAlignment="Center" FontSize="18" 
                                       HorizontalAlignment="Center"  Foreground="White" 
                                       FontWeight="Bold" Text="Факультет математика и информационных технологии"/>
                                <TextBlock VerticalAlignment="Center" FontSize="14" 
                                       HorizontalAlignment="Center"  Foreground="White" 
                                       FontWeight="Bold" Text="Учебный корпус №1"/>
                            </StackPanel>
                        </StackPanel>
