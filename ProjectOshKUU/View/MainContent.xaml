<UserControl x:Class="ProjectOshKUU.View.MainContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectOshKUU.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"> 
        <TextBlock Text="Кыргыз-Өзбек эл аралык университети" TextAlignment="Center" FontSize="25"/>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

                <Button Content="Университеттин сайты" FontSize="30" Margin="20" Command="{Binding ButtonOpenSite}" Width="400" Height="70"/>
                <Button Content="Университеттин картасы" FontSize="30" Margin="20" Command="{Binding ButtonOpenMap}" Width="400" Height="70"/>
                <Button Content="Студентти издөө" FontSize="30"  Margin="20" Command="{Binding ButtonOpenAVN}" Width="400" Height="70"/>
        </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
